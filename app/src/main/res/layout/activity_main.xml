<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="intentSettingsOfApp"
            android:text="@string/sing" />

    </LinearLayout>

    <!--    <include layout="@layout/fragment_of_current_weather" />-->
    <fragment
        android:id="@+id/fragmentOfCurrentWeather"
        android:layout_width="match_parent"
        android:name="com.example.andoidbasecourse.FragmentOfCurrentWeather"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fragmentOfCurrentWeather"


        />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.andoidbasecourse.FragmentListOfCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rv" />


</androidx.constraintlayout.widget.ConstraintLayout>